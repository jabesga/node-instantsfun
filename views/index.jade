    script.
      function playSound(soundname, soundfile) {
        if(document.getElementById(soundname) == undefined){
          var audio = document.createElement("audio");
          audio.setAttribute('id', soundname);
          audio.setAttribute('src', soundfile);
          audio.setAttribute('onended', 'remove_sound("' + soundname + '")');
          document.body.appendChild(audio);
          audio.play();
        }
        else{
          remove_sound(soundname);
        }
      }

      function remove_sound(soundname){
        var elem = document.getElementById(soundname);
        elem.parentNode.removeChild(elem);
      }
    